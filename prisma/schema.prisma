generator client {
  provider     = "prisma-client-js"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

model Project {
  id               String   @id @default(uuid())
  title            String
  status           String   @default("Conclu√≠do")
  alternativesCount Int
  criteriaCount    Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  criteriaWeights  Json
  ranking          Json
  matrixRaw        Json
  originalData     Json
  
  @@map("projects")
}
